<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".8">

        <TextView
            style="@style/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cita agendada el dia:"
            android:id="@+id/textView3" />

        <TextView
            style="@style/TextViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15 de Agosto 2015"
            android:id="@+id/textView_detail_day"
            android:layout_marginTop="10dp" />

        <TextView
            style="@style/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Con:"
            android:id="@+id/textView5"
            android:layout_marginTop="20dp" />

        <TextView
            style="@style/TextViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Carlows"
            android:id="@+id/textView_detail_provider_name"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_up_arrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_arrow_up_bold_white_24dp"
            app:elevation="5dp" />

        <TextView
            style="@style/TextViewTitle"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-30 min"
            android:id="@+id/textView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp" />

        <TextView
            style="@style/TextViewTitle"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+30 min"
            android:id="@+id/textView2"
            android:layout_marginBottom="10dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_down_arrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_arrow_down_bold_white_24dp"
            app:elevation="5dp" />
    </LinearLayout>

</LinearLayout>