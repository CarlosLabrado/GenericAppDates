<resources>


    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="buttonOrange">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:background">@color/udacious_orange</item>
        <item name="android:width">200dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonRed">
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:background">@color/red_800</item>
        <item name="android:width">200dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewDetail">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
